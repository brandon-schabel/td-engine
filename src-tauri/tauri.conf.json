{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wave TD",
  "version": "0.1.0",
  "identifier": "com.wavetd.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Wave TD",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Brandon Schabel (H4AH97G9BM)",
      "entitlements": "./entitlements.plist",
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13",
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "iOS": {
      "bundleVersion": "1",
      "developmentTeam": "Developer ID Application: Brandon Schabel (H4AH97G9BM)",
      "minimumSystemVersion": "13.0"
    }
  }
}